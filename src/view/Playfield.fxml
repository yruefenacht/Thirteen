<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<BorderPane styleClass="playfieldBorderPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox styleClass="playfieldMenuBar">

         <ImageView />
         <HBox>
            <Label />
            <ImageView />
         </HBox>
      </HBox>
   </top>
   <center>
      <HBox alignment="CENTER">
         <Label fx:id="playfieldLevel" alignment="CENTER" styleClass="playfieldLevel" />
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <HBox fx:id="playfieldContainer" alignment="CENTER" BorderPane.alignment="CENTER">
         <Pane fx:id="playfield" />
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
