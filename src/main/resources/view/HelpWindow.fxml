<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextArea?>

<!-- HELP WINDOW -->
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="help">
    <!-- TOP -->
    <top>
        <HBox alignment="CENTER" styleClass="help__top">
            <Button fx:id="helpBackButton" prefWidth="50.0">
                <graphic>
                    <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                        <Image url="@../images/back.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Region prefWidth="0.0" HBox.hgrow="ALWAYS" />
            <Label styleClass="help__title" text="Help" />
            <Region prefWidth="50.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>
    <!-- CENTER -->
    <center>
        <VBox>
            <!-- GOAL -->
            <HBox alignment="CENTER">
                <Label styleClass="help_h2" text="%HelpWindow.goalLabel"/>
            </HBox>
            <HBox styleClass="help__article">
                <TextArea styleClass="help__text" wrapText="true" editable="false" text="%HelpWindow.goal"/>
            </HBox>
            <!-- GAME PLAY -->
            <HBox alignment="CENTER">
                <Label styleClass="help_h2" text="GAME PLAY"/>
            </HBox>
            <HBox styleClass="help__article">
                <TextArea styleClass="help__text" wrapText="true" editable="false"
                      text="To increase the value of a block it must be merged with another adjacent block of equal value. If each block has no neighbor of equal value the game ist over."/>
            </HBox>
            <!-- SCORE -->
            <HBox alignment="CENTER">
                <Label styleClass="help_h2" text="SCORE"/>
            </HBox>
            <HBox styleClass="help__article">
                <TextArea styleClass="help__text" wrapText="true" editable="false"
                      text="The score consists of the current level, which is the value of the highest block, and the number of stars. Buying a bomb or an undo action reduces the number of stars and thus the score."/>
            </HBox>
        </VBox>
    </center>
    <!-- CREDIT -->
    <bottom>
        <HBox alignment="CENTER">
            <Label text="&#9400; Yannick RÃ¼fenacht, Mohammed Ali" styleClass="help__credit"/>
        </HBox>
    </bottom>
</BorderPane>
