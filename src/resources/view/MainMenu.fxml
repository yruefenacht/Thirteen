<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- MAIN MENU -->
<VBox alignment="CENTER" spacing="50.0" styleClass="mainMenu" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <!-- TOP LABEL -->
   <Label alignment="CENTER" styleClass="mainMenu__icon" text="13"/>
   <!-- MAIN BUTTONS -->
   <VBox alignment="CENTER">
      <Button graphicTextGap="40.0" onAction="#showPlayfield" prefHeight="70.0" prefWidth="220.0"
              styleClass="mainMenu__MainButton" text="Play">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0"
                       pickOnBounds="true" preserveRatio="true" styleClass="imageViewPlay">
               <Image url="@../images/playIcon.png"/>
            </ImageView>
         </graphic>
      </Button>
   </VBox>
   <!-- SETTINGS BUTTONS -->
   <HBox alignment="CENTER" prefHeight="59.0" prefWidth="336.0" spacing="50.0">
      <!-- SOUND -->
      <Button styleClass="mainMenu__SettingsButtons" prefHeight="59.0" prefWidth="62.0">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../images/musicIcon.png"/>
            </ImageView>
         </graphic>
      </Button>
      <!-- LANGUAGE -->
      <Button prefHeight="59.0" prefWidth="62.0" styleClass="mainMenu__SettingsButtons" text="EN" />
      <!-- SETTINGS -->
      <Button styleClass="mainMenu__SettingsButtons" prefHeight="59.0" prefWidth="62.0">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../images/settingIcon.png"/>
            </ImageView>
         </graphic>
      </Button>
   </HBox>
</VBox>
